@model ProjetoFinalBaza.Models.TipoColaborador

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Tipo de Colaborador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoColaboradorNome" class="control-label">Tipo de Colaborador</label>
                <input asp-for="TipoColaboradorNome" class="form-control" />
                <span asp-validation-for="TipoColaboradorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
