@model ProjetoFinalBaza.Models.ProcedimentoRealizacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Procedimento Realizacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Nome do Cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcedimentoId" class="control-label">Nome do Procedimento</label>
                <select asp-for="ProcedimentoId" class="form-control" asp-items="ViewBag.ProcedimentoId"></select>
                <span asp-validation-for="ProcedimentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label">Nome do Colaborador</label>
                <select asp-for="ColaboradorId" class="form-control" asp-items="ViewBag.ColaboradorId"></select>
                <span asp-validation-for="ColaboradorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalRealizacaoId" class="control-label">Local da Realização</label>
                <select asp-for="LocalRealizacaoId" class="form-control" asp-items="ViewBag.LocalRealizacaoId"></select>
                <span asp-validation-for="LocalRealizacaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRealizacao" class="control-label">Data da Realização</label>
                <input asp-for="DataRealizacao" class="form-control" />
                <span asp-validation-for="DataRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObservacaoRealizacao" class="control-label">Observação</label>
                <input asp-for="ObservacaoRealizacao" class="form-control" />
                <span asp-validation-for="ObservacaoRealizacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary" asp-action="Index">Voltar a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
